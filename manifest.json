{
  "manifest_version": 3,
  "name": "Color Changer",
  "version": "1.0.0",
  "description": "Change text and background colors of any website.",
  "icons": {
    "48": "images/icon-48.png"
  },
  "action": {
    "default_popup": "index.html"
    },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
